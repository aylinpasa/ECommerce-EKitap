@model  List<ECommerce.Models.Products>
@{
    ViewBag.Title = "GetProductsbySubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    @{
        foreach (var product in Model)
        {
            <div class="col-sm-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">

                                    @if (product.Image != null)
                                    {
                                        <img src="data:image;base64,@(Convert.ToBase64String(product.Image))" width="70" height="90" />
                                    }

                                    @product.Name

                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    &nbsp; &nbsp;  @product.Price
                                </div>
                                
                            </div>

                            <div class="col-auto">
                                    <a href="@Url.Action("AddProducttoBasket","Product",new { productId=product.ProductID,subcategoryId=product.SubCategoryID})" class="btn btn-info btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-shopping-basket text-gray-900"></i>
                                        </span>
                                    </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>


